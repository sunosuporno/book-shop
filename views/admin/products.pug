extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")    

block content 
    main
        if prods.length>0 
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__titleGreat #{product.title}
                        .card__image
                            img(src="/" + product.imageUrl width = "300px" alt=product.title)
                        .card__content
                            h2.product__price $#{product.price}
                            p.product__description #{product.description}
                        .card__actions
                            -var url = product._id
                            a(href="/admin/edit-product/" + url + "?edit=true").btn  Edit
                            input(type="hidden", value = product._id, name="productId")
                            input(type="hidden", value = csrfToken, name = "_csrf")
                            button(type="button" onClick = 'deleteProduct(this)').btn Delete 
        else 
            h1 There are no products!

block script 
    script(src="/js/admin.js") 


