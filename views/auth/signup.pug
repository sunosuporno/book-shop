extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")   
    link(rel="stylesheet", href="/css/auth.css")  

block content 
    main
        if errorMessage 
            div.user-message.user-message--error #{errorMessage}
        form.login-form(action="/signup" method="POST")
            .form-control
                label(for="email") E-Mail 
                - var url = validationErrors.find(e => e.param === 'email')
                input(class = url ? 'invalid' : '', type="email", name="email" value= oldInput.email)#email
            .form-control
                label(for="password") Password
                - var url = validationErrors.find(e => e.param === 'password')
                input(class = url ? 'invalid' : '', type="password" name="password" value = oldInput.password )#password
            .form-control 
                label(for ='confirmPassword') Confirm Password
                - var url = validationErrors.find(e => e.param === 'confirmPassword')
                input(class = url ? 'invalid' : '', type="password", name="confirmPassword" value = oldInput.confirmPassword)#confirmPassword
                input(type="hidden", value = csrfToken, name = "_csrf")
            button.btn(type="submit") Signup
