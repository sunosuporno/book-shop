extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/cart.css")

block content 
    main 
        ul 
            each p in products 
                li 
                    p #{p.productId.title} (#{p.quantity})
        div.centered 
            h2 Total: #{totalSum}
        .centered 
            button#order-btn.btn ORDER
            script(src="https://js.stripe.com/v3/") 

block script 
    script(src="/js/stripe.js") 

