extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/orders.css")

block content 
    main 
        if orders.length <= 0
            h1 Nothing there!
        else 
            ul.orders 
                each order in orders
                    li.orders_item
                        h1 Order - ##{order._id}
                        ul.orders__products
                            each product in order.items
                                li.orders__products-item #{product.title} (#{product.quantity})