extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")    

block content 
    main
        if prods.length>0 
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__titleGreat #{product.title}
                        .card__image
                            img(src="/" + product.imageUrl width = "300px" alt=product.title)
                        .card__content
                            h2.product__price $#{product.price}
                            p.product__description #{product.description}
                        .card__actions
                            -var url =  product._id
                            a(href="/products/" + url).btn Details 
                            if isAuthenticated
                                form(action="/cart", method="POST")
                                    input(type="hidden", value = csrfToken, name = "_csrf")
                                    button.btn Add to cart 
                                    input(type= 'hidden', name= "productId", value = product._id)
            section.pagination
                if previousPage > 0
                    a(href="?page=" + previousPage) #{previousPage}
                -var currentpage = 1
                    unless currentPage 
                        a(href="?page=1").active 1
                a(href="?page=" + currentPage).active #{currentPage}
                if hasNextPage  
                    a(href="?page=" + nextPage) #{nextPage}
                -var currentPage = lastPage 
                -var nextPage = lastPage 
                    unless (currentPage && nextPage) 
                        a(href="?page=" + lastPage) #{lastPage}  
        else 
            h1 There are no products!


